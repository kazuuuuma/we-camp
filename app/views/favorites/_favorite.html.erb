<% if user_signed_in? %>
  <% if @post.user_id != current_user.id %>
    <span class="favorite">
    <% if post.favorite?(current_user) %>
      <%= form_for(post.favorites.find_by(user_id: current_user.id), method: :destroy, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{post.favorite_count}", class: "glyphicon glyphicon-heart" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(post.favorites.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :post_id, post.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{post.favorite_count}", class: "glyphicon glyphicon-heart-empty" %>
        <% end %>
      <% end %>
    <% end %>
    </span>
  <% end %>
<% else %>
  <%= button_tag(class: "btn btn-default btn-xs") do %>
    <%= content_tag :span, "#{post.favorite_count}", class: "glyphicon glyphicon-heart" %>
  <% end %>
<% end %>
