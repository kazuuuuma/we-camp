<%= render "shared/header" %>
<%# /検索 %>
<%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "検索", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<%# /投稿一覧 %>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to post.campsite, "#", method: :get %>
          </h4>
        </div>
        <%= link_to post_path(post.id), method: :get do %>
          <%= image_tag post.image, class: "img-fluid" %>
        <% end %>
        <div class="card-body">
          <p class="card-subtitle">
            <%= link_to post.user.nickname, "/users/#{post.user_id}", method: :get %>
          </p>
          <div id="favo_buttons_<%= post.id %>" class="btn btn-primary">
            <%= render partial: 'favorites/favorite', locals:{ post: post } %>
          </div>
          <p class="card-text">
            <%= post.text %>
          </p>
        </div>
      </div>
    </div>
  <% end%>
</div>




<%= render "shared/footer" %>